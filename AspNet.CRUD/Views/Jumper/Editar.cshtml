@model AspNet.CRUD.Models.Jumpers

@{ViewBag.Title = "Editar";}
<br><br>
<h2>Editar Jumper</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Dados do jumper</legend>
            @Html.HiddenFor(model => model.IDJumpers)
        <div class="editor-label">
            @Html.LabelFor(model => model.TypeJumpers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TypeJumpers)
            @Html.ValidationMessageFor(model => model.TypeJumpers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QntdJumpers)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QntdJumpers)
            @Html.ValidationMessageFor(model => model.QntdJumpers)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Voltar", "Index")
</div>